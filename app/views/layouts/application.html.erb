<!DOCTYPE html>
<html>
<head>
  <title>PersonalBlog</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
    <%= stylesheet_link_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css"  %>
   <%= javascript_include_tag "https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js" %>
   <%= csrf_meta_tags %>
</head>
<body>
	<div class="container">
	<div class="pull-right">
		<% if user_signed_in? %>
		 <%= link_to "Edit Profile", edit_user_registration_path, class: "btn btn-primary" %>
			<%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-eject btn btn-danger" %>
		<% end %>
	</div>
<%= yield %>

</body>
</html>
